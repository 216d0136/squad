<table class='table table-hover table-inverse'>
    <thead>
      <tr> 
        <th>image</th>
        <th>team_name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% teams.each do |team| %>
          <td><%= attachment_image_tag @team, :image_id, :fill, 100, 100 %></td>
          <td><%= link_to team.name,team, class: "team_#{team.id}" %></td>
          <td><%= team.body %></td>
        </tr>
      <% end %>
    </tbody>
</table>

<div class='row'>
  <div class='col-xs-10'>
    <h2>投稿一覧</h2>
    　<table class='table table-hover table-inverse'>
      <thead>
        <tr> 
            <th>image</th>
            <th>team_name</th>
            <th>Description</th>
            <th>いいね</th>
            <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @teams.each do |team| %>
          <tr>
            <td><%= attachment_image_tag team, :image, :fill, 100, 100 %></td>
            <td><%= team.name %></td>
            <td><%=safe_join(team.body.split("\n"),tag(:br))%></td>
            <td><span class="glyphicon glyphicon-heart"><%= team.favorites.count%></span></td>
          </tr>
        <% end %>
        <%= paginate @teams %>
      </tbody>
    </table>
  </div>
  </div>


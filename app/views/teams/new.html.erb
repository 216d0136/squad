<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>">
    <% message2 = message.gsub(",","<br>") %>
    <%= message2.html_safe %>
  </div>
<% end %>
<div class="container-fluid">
  <div class="row">
	<div class="col-xs-10">
		<h3>チーム投稿</h3>
		<%= render 'layouts/error_messages', model: @team_new %>
		<%= form_for(@team_new) do |f| %>
		  <div class="field row">
		  <%= attachment_image_tag @team_new, :image, size:"375x225", fallback: "no_image.jpg", id: 'preview' %>
		  <%= f.attachment_field :image, class: "team_image" %>
		  </div>
		  <div class="field row">
		    <%= f.label :team_name %><br>
		    <%= f.text_field :name, class: 'col-xs-3 team_name' %>
		  </div>

		  <div class="field row">
		    <%= f.label :description %><br>
		    <%= f.text_area :body, class: 'col-xs-5 team_body'%>
		  </div>

		  <div class="actions row">
		    <%= f.submit %>
		  </div>
		<% end %>
	</div>
  </div>
</div>			
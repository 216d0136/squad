<table class='table table-hover table-inverse'>
<div class='row'>
  <div class='col-xs-5'>
    <h2>Teams</h2>
      <thead>
        <tr> 
            <th>image</th>
            <th>team_name</th>
            <th>Description</th>
            <th>いいね</th>
            <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @teams.each do |team| %>
          <tr>
            <td><%= attachment_image_tag team, :image, :fill, 100, 100 %></td>
            <td><%= team.name %></td>
            <td><%= team.body %></td>
            <td><span class="glyphicon glyphicon-heart"><%= team.favorites.count%></span></td>
          </tr>
        <% end %>
      </tbody>
   </div>
  </div>
</table>
<table class='table table-hover table-inverse'>
   <div class='col-xs-5'>
      <div class='row'>
        <h2>Team ranks</h2>
          <thead>
            <tr> 
              <th>image</th>
              <th>team_name</th>
              <th>Description</th>
              <th>いいねランキング</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
           <div class='col-xs-5'>
            <% @all_ranks.each do |team| %>
              <tr>
                    <td><%= attachment_image_tag team, :image, :fill, 100, 100 %></td>
                    <td><%= team.name %></td>
                    <td><%= team.body %></td>
                    <td><span class="glyphicon glyphicon-heart"><%= team.favorites.count%></span></td>
              </tr>
            <% end %>
          </tbody>
      </div>
    </div>
</table>



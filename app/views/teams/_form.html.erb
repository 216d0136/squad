
<%= form_for(team) do |f| %>
  <div class="field row">
  <%= attachment_image_tag team, :image, size:"100x60", fallback: "no_image.jpg", id: 'preview' %>
  
  <%#= attachment_image_tag(team, :image, :size, "100*100", fallback: "no_image.jpg") %>
  <%= f.attachment_field :image, class: "team_image" %>
  </div>
  <div class="field row">
    <%= f.label :team_name %>
    <%= f.text_field :name, class: 'col-xs-12 team_name' %>
  </div>

  <div class="field row">
    <%= f.label :description %>
    <%= f.text_area :body, class: 'col-xs-12 team_body'%>
  </div>

  <div class="actions row">
    <%= f.submit %>
  </div>
<% end %>

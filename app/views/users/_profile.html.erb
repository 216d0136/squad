<table class='table'>
    <tr>
      <th>image</th>
      <th>user_name</th>
      <th>introduction</th>
      <th colspan="3"></th>
    </tr>
  <tbody>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, size:"60x60", fallback: "icon.jpg" %></td>
        <td><%= user.name %></td>
        <td><%#=safe_join(user.introduction.split("\n"),tag(:br))%></td>
      </tr>
  </tbody>
</table>

<div class='row'>
  <%= link_to '',edit_user_path(user),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>




   